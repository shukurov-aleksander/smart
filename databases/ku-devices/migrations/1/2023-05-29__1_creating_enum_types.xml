<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="1" author="Aleksander.shukurov@gmail.com">
    <comment>create type "status_enum"</comment>
    <sql>
      CREATE TYPE status_enum AS ENUM ('IN USE', 'BROKEN');
    </sql>
    <rollback>
      <sql>
        DROP TYPE status_enum
      </sql>
    </rollback>
  </changeSet>

  <changeSet id="2" author="Aleksander.shukurov@gmail.com">
    <comment>create type "type_name_enum"</comment>
    <sql>
      CREATE TYPE type_name_enum AS ENUM ('PHONE', 'LAPTOP', 'FITNESS_BAND');
    </sql>
    <rollback>
      <sql>
        DROP TYPE type_name_enum
      </sql>
    </rollback>
  </changeSet>
</databaseChangeLog>